{% if settings.show_articles %}
<nav>
  <span class="heading">{{ 'layout.sidebar.recent_articles' | t }}</span>
  <ul>
    {% for article in blogs[settings.sidebar_blog].articles limit:6 %}
    <li><a href="{{ article.url }}"{% if article.url == active_url %} class="current"{% endif %}>{{ article.title }}</a></li>
    {% endfor %}
  </ul>
</nav>
{% endif %}
{% if settings.show_about_us %}
<nav>
  <span class="heading">{{ 'layout.sidebar.about_us' | t }}</span>
  <div>
    {{ pages.about-us.content | strip_html | truncatewords: 50 }} <a href="{{ pages.about-us.url }}">{{ 'blogs.article.read_more' | t }}</a>
  </div>
</nav>
{% endif %}