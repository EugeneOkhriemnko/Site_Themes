{% if shop.customer_accounts_enabled %}
<nav>
  <span class="heading">{{ 'layout.customer.your_account' | t }}</span>
  <ul>
  {% if customer  %}
    <li><a href="/account">{{ 'layout.customer.welcome' | t: name: customer.first_name }}</a></li>
    <li>{{ 'layout.customer.log_out' | t | customer_logout_link }}</li>
  {% else %}
    <li>{{ 'layout.customer.log_in' | t | customer_login_link }}</li>
    {% if shop.customer_accounts_optional %}
    <li>{{ 'layout.customer.create_account' | t | customer_register_link }}</li>
    {% endif %}
  {% endif %}
  </ul>
</nav>
{% endif %}
{% if settings.sidebar_linklist_1.title != "" and linklists[settings.sidebar_linklist_1].links.size > 0 %}
